<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.ImageView?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="org.example.ecommercejavafx.controllers.MyProfileController" style="-fx-background-color: #f4f4f9;">
    <VBox spacing="20" alignment="center" style="-fx-padding: 40; -fx-alignment: center;">
        <!-- User Profile Header -->
        <HBox spacing="15" alignment="center">
            <ImageView fx:id="profilePicture" fitWidth="100" fitHeight="100" style="-fx-effect: dropshadow(gaussian, black, 10, 0.5, 0, 2);" />
            <Label text="My Profile" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #333;" />
        </HBox>

        <!-- User Information Form -->
        <GridPane hgap="20" vgap="15" style="-fx-padding: 20; -fx-background-color: #ffffff; -fx-border-radius: 10; -fx-background-radius: 10; -fx-border-color: #ccc; -fx-padding: 20;">
            <!-- Name -->
            <Label text="Full Name:" style="-fx-font-size: 16px; -fx-text-fill: #666;" />
            <TextField fx:id="nameField" GridPane.columnIndex="1" style="-fx-font-size: 14px; -fx-pref-width: 300;" />

            <!-- Email -->
            <Label text="Email:" style="-fx-font-size: 16px; -fx-text-fill: #666;" GridPane.rowIndex="1" />
            <TextField fx:id="emailField" GridPane.columnIndex="1" GridPane.rowIndex="1" style="-fx-font-size: 14px; -fx-pref-width: 300;" />

            <!-- Phone -->
            <Label text="Phone Number:" style="-fx-font-size: 16px; -fx-text-fill: #666;" GridPane.rowIndex="2" />
            <TextField fx:id="phoneField" GridPane.columnIndex="1" GridPane.rowIndex="2" style="-fx-font-size: 14px; -fx-pref-width: 300;" />

            <!-- Address -->
            <Label text="Address:" style="-fx-font-size: 16px; -fx-text-fill: #666;" GridPane.rowIndex="3" />
            <TextField fx:id="addressField" GridPane.columnIndex="1" GridPane.rowIndex="3" style="-fx-font-size: 14px; -fx-pref-width: 300;" />
        </GridPane>

        <!-- Save Changes Button -->
        <Button text="Save Changes" fx:id="saveButton" style="-fx-background-color: #4caf50; -fx-text-fill: white; -fx-font-size: 16px; -fx-border-radius: 8; -fx-background-radius: 8; -fx-padding: 10 20;" />
    </VBox>
</AnchorPane>
