<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox
        alignment="CENTER"
        xmlns="http://javafx.com/javafx"
        xmlns:fx="http://javafx.com/fxml"
        fx:controller="org.example.ecommercejavafx.controllers.SignUpController">

    <!-- StackPane to center the VBox in the Scene -->
    <StackPane alignment="CENTER">
        <!-- VBox for form content with shadow effect and background styling -->
        <VBox alignment="CENTER"
              spacing="16"
              style="-fx-padding: 30;
                     -fx-background-color: linear-gradient(to bottom, #ffffff, #e0e0e0);
                     -fx-border-color: #d1d1d1;
                     -fx-border-radius: 10;
                     -fx-border-width: 1;
                     -fx-background-radius: 10;
                     -fx-effect: dropshadow(gaussian, #888888, 5, 0, 0, 10);
                     -fx-pref-width: 400px;
                     -fx-pref-height: 500px;"
              maxWidth="400">

            <!-- Header Section -->
            <Label text="Ready to Join Us?" style="-fx-font-size: 28; -fx-font-weight: bold; -fx-text-fill: #333;" />
            <Label text="Sign Up and Get Started" style="-fx-font-size: 14; -fx-text-fill: #666;" />

            <!-- Form Section -->
            <VBox alignment="CENTER" spacing="12">
                <Label text="Username" style="-fx-font-size: 16; -fx-font-weight: bold; -fx-text-fill: #444;" />
                <TextField fx:id="usernameField" promptText="Enter your username" style="-fx-background-radius: 5; -fx-border-radius: 5; -fx-pref-width: 280px;" maxWidth="300"/>

                <Label text="Password" style="-fx-font-size: 16; -fx-font-weight: bold; -fx-text-fill: #444;" />
                <PasswordField fx:id="passwordField" promptText="Enter your password" style="-fx-background-radius: 5; -fx-border-radius: 5; -fx-pref-width: 280px;" maxWidth="300" />

                <Label text="Confirm Password" style="-fx-font-size: 16; -fx-font-weight: bold; -fx-text-fill: #444;" />
                <PasswordField fx:id="ConfirmPasswordField" promptText="Re-enter your password" style="-fx-background-radius: 5; -fx-border-radius: 5; -fx-pref-width: 280px;" maxWidth="300" />
            </VBox>

            <!-- SignUp Button -->
            <Button fx:id="SignUpButton" text="Sign Up"
                    onAction="#handleSignUpButton"
                    style="-fx-pref-width: 280px; -fx-background-color: #4caf50; -fx-text-fill: white; -fx-font-size: 16; -fx-font-weight: bold; -fx-background-radius: 5; -fx-cursor: hand;" />
        </VBox>
    </StackPane>

</VBox>
